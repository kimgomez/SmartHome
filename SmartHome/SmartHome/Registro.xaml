<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHome.Registro">
    <ContentPage.Content>
        <ScrollView>
            
           <!-- <StackLayout> -->
              <!-- <Label Text="Bienvenido a Registro"-->
            <!--  VerticalOptions="CenterAndExpand" -->
            <!--      HorizontalOptions="CenterAndExpand" />-->
            <!--  </StackLayout> -->

            <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="15">

                <!-- Nombre Entry -->
                <Entry x:Name="txtFirstName"
                   Placeholder="First Name"
                   TextColor="Black"
                   BackgroundColor="White"
                   Margin="0,10,0,0" />

                <!-- Apellido Entry -->
                <Entry x:Name="txtLastName"
                   Placeholder="Last Name"
                   TextColor="Black"
                   BackgroundColor="White"
                   Margin="0,10,0,0" />

                <!-- Email Entry -->
                <Entry x:Name="txtEmail"
                   Placeholder="Email"
                   TextColor="Black"
                   BackgroundColor="White"
                   Margin="0,10,0,0"
                   Keyboard="Email" />

                <!-- Create Password Entry -->
                <Entry x:Name="txtCreatePassword"
                   Placeholder="Create Password"
                   IsPassword="True"
                   TextColor="Black"
                   BackgroundColor="White"
                   Margin="0,10,0,0" />

                <!-- Confirm Password Entry -->
                <Entry x:Name="txtConfirmPassword"
                   Placeholder="Confirm Password"
                   IsPassword="True"
                   TextColor="Black"
                   BackgroundColor="White"
                   Margin="0,10,0,0" />

                <!-- Checkbox and Privacy Policy -->
                <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                    <CheckBox x:Name="chkAgree" />
                    <Label Text="I agree to the privacy policy agreement."
                       VerticalOptions="Center"
                       TextColor="Gray" />
                </StackLayout>

                <!-- Create Account Button -->
                <Button Text="Create Account"
                    Clicked="CreateAccountButton_Clicked"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Margin="0,20,0,0"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    WidthRequest="200" />
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>